{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "C++: Build & Run with IO (to bin)",
      "type": "shell",
      "command": "mkdir -p \"${workspaceFolder}/bin\" && g++ \"${file}\" -o \"${workspaceFolder}/bin/${fileBasenameNoExtension}\" && \"${workspaceFolder}/bin/${fileBasenameNoExtension}\" < \"${fileDirname}/input.txt\" > \"${fileDirname}/output.txt\"",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}